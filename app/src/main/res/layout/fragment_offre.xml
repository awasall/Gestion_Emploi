<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OffreFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:gravity="center"
        android:textSize="@dimen/dim_title"
        android:paddingLeft="@dimen/dim_left"
        android:paddingTop="@dimen/dim_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/offre" />

    <EditText
        android:id="@+id/txtCompanyName"
        android:layout_marginTop="@dimen/dim_top"
        android:hint="@string/Company_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/txtOfferTitle"
        android:layout_marginTop="@dimen/dim_top"
        android:hint="@string/offer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/txtOfferDescription"
        android:layout_marginTop="@dimen/dim_top"
        android:hint="offer_descriptione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/txtPositiontype"
        android:layout_marginTop="@dimen/dim_top"
        android:hint="Position_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/txtPlace"
        android:layout_marginTop="@dimen/dim_top"
        android:hint="place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:layout_marginRight="@dimen/dim_right"
        android:layout_marginLeft="@dimen/dim_left"
        android:id="@+id/btnSave"
        android:layout_marginTop="@dimen/dim_top"
        android:text="@string/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>